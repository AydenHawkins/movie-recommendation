<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieapp.controllers.SearchController">

    <!-- Top bar with Search, Discover buttons, and ChoiceBox -->
    <HBox alignment="TOP_RIGHT" layoutX="788.0" layoutY="59.0" prefHeight="26.0" prefWidth="258.0" spacing="10.0" AnchorPane.leftAnchor="788.0" AnchorPane.rightAnchor="11.0" AnchorPane.topAnchor="59.0">
        <Button fx:id="searchSceneButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleSearchSceneButton" text="Search" />
        <Button fx:id="discoverSceneButton" mnemonicParsing="false" onAction="#handleDiscoverSceneButton" text="Discover" />
        <ChoiceBox fx:id="watchListChoiceBox" prefHeight="26.0" prefWidth="100.0" />
    </HBox>

    <!-- Search Field and Search Button -->
    <HBox spacing="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="660.0" AnchorPane.topAnchor="60.0">
        <TextField fx:id="searchField" alignment="TOP_LEFT" prefWidth="300.0" promptText="Enter movie title">
            <HBox.margin>
                <Insets left="25.0" />
            </HBox.margin>
        </TextField>
        <Button fx:id="searchButton" onAction="#handleSearchButton" text="Search" />
    </HBox>

    <!-- Scrollable GridPane for movie results -->
    <ScrollPane fx:id="scrollPane" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="120.0">
        <GridPane fx:id="resultsGrid" hgap="10.0" vgap="10.0" />
    </ScrollPane>

    <!-- Pagination buttons (aligned at the bottom) -->
    <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Button fx:id="prevPageButton" onAction="#handlePrevPage" text="Previous" />
        <Button fx:id="nextPageButton" onAction="#handleNextPage" text="Next" />
    </HBox>

</AnchorPane>
