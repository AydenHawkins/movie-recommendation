<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieapp.controllers.ListController">

  <!-- Search Field and Button (Center aligned at the top) -->
  <HBox alignment="CENTER" layoutY="20.0" spacing="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" />

  <!-- Scrollable GridPane for movie results -->
  <ScrollPane fx:id="scrollPane" layoutX="0.8" layoutY="80.0" prefHeight="36.0" prefWidth="389.0" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="80">
    <GridPane fx:id="resultsGrid" hgap="10.0" vgap="10.0" />
  </ScrollPane>

  <!-- Pagination buttons (aligned at the bottom) -->
  <HBox alignment="CENTER" prefHeight="26.0" prefWidth="392.0" spacing="10.0" AnchorPane.bottomAnchor="11.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="1.0" />
   <Button fx:id="likedMovies" layoutX="14.0" layoutY="43.0" mnemonicParsing="false" text="Liked Movies" />
   <Button fx:id="watchedMovies" layoutX="144.0" layoutY="43.0" mnemonicParsing="false" text="Watched Movies" />
   <Button fx:id="watchList" layoutX="312.0" layoutY="43.0" mnemonicParsing="false" text="Watch List" />

</AnchorPane>
